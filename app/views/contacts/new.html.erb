<div class="request" align="center">
  <h3>Request Form</h3>

  <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
    <%= f.input :first_name, placeholder: 'First Name', label: false %>
    <%= f.input :last_name, placeholder: 'Last Name', label: false %>
    <%= f.input :address, placeholder: 'Address', label: false %>
    <%= f.input :city, placeholder: 'City', label: false %>
    <%= f.input :zip, placeholder: 'Zip/Postal Code', label: false %>
    <%= f.input :phone, placeholder: 'Phone', label: false %>
    <%= f.input :email, placeholder: 'Email', label: false %>
    <%= f.input :message, as: :text, placeholder: 'Message', label: false %>
    <%= f.submit 'Send Message' %>
  <% end %>

</div>
