<div class="request" align="center">
  <h3>Request Form</h3>

  <%= form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
    <%= f.text_field :name, placeholder: 'Name', :required => true %>
    <%= f.text_field :email, placeholder: 'Email', :required => true %>
    <%= f.text_area :message, placeholder: 'Message', size: '60x18', :required => true %>
    <div class= "hidden">
      <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
    </div>
    <div>
      </br>
      <%= f.submit 'Send Message' %>
    </div>
  <% end %>
</div>
